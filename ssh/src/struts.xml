<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<constant name="struts.objectFactory.spring.autoWire.alwaysRespect"
		value="true" />
	<!-- 分离用户模块的xml配置文件 -->
	<include file="user.xml"></include>
	<!-- 分离一级商品分类模块 -->
	<include file="category.xml"></include>
	<!-- 后台管理员登录模块<蒋德义> -->
	<include file="adminuser.xml"></include>
	<!-- 后台订单管理模块<蒋德义> -->
	<include file="adminorder.xml"/>
	<!-- 商品相关管理页面 <罗剑> -->
	<include file="product.xml"></include>
	<!-- 商品订单的相关配置  <罗剑>-->
	<include file="order.xml"></include>
	<!--  二级分类管理的配置 <张辉娟> -->
	<include file="admincategorysecond.xml"></include>
</struts>
